{
    "locale": "es",
    "manifest": {
        "displayName": "Raspistant",
        "invocationName": "Raspistant",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "DESCUBRIMIENTO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "DESCUBRIMIENTO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "descubrir nodos sensores",
                        "encuentra mis nodos"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Detectando nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "descubrir_nodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "LISTADO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "LISTADO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "listar nodos sensores",
                        "qué nodos hay en casa"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Listando nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "listar_nodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "DESCONEXION",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "DESCONEXION",
                "parameters": [
                    {
                        "name": "sensor",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "elimina nodo $SchemaOrg_Text:sensor",
                        "elimina sensor $SchemaOrg_Text:sensor",
                        "borrar nodo $SchemaOrg_Text:sensor",
                        "borrar sensor $SchemaOrg_Text:sensor"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Nodo $sensor olvidado"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "desconectar_nodo",
                                    "params": {
                                        "sensor_name":"$sensor"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "CONSULTA",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "CONSULTA",
                "parameters": [
                    {
                        "name": "sensor",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "dime el estado de $SchemaOrg_Text:sensor",
                        "consulta el nodo $SchemaOrg_Text:sensor"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Consultando nodo $sensor"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "consultar_nodo",
                                    "params": {
                                        "sensor_name":"$sensor"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
