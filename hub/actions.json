{
    "locale": "es",
    "manifest": {
        "displayName": "Raspistant",
        "invocationName": "Raspistant",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "DESCUBRIMIENTO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "DESCUBRIMIENTO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "descubre nodos sensores",
                        "descubrir nodos sensores"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Descubriendo nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "descubrir_nodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "LISTADO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "LISTADO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "listar nodos sensores",
                        "lista nodos sensores"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Listando nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "listar_nodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "DESCONEXION",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "DESCONEXION",
                "parameters": [
                    {
                        "name": "sensor",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "desconecta el sensor $SchemaOrg_Text:sensor",
                        "desconectar el sensor $SchemaOrg_Text:sensor",
                        "olvida el sensor $SchemaOrg_Text:sensor",
                        "olvidar el sensor $SchemaOrg_Text:sensor",
                        "olvida $SchemaOrg_Text:sensor",
                        "olvidar $SchemaOrg_Text:sensor"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Desconectando el sensor $sensor"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "desconectar_nodo",
                                    "params": {
                                        "sensor_name":"$sensor"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "CONSULTA",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "CONSULTA",
                "parameters": [
                    {
                        "name": "sensor",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "consulta el sensor $SchemaOrg_Text:sensor",
                        "consulta el estado del sensor $SchemaOrg_Text:sensor",
                        "consultar el sensor $SchemaOrg_Text:sensor",
                        "obtener medicion del sensor $SchemaOrg_Text:sensor",
                        "consulta $SchemaOrg_Text:sensor",
                        "consultar $SchemaOrg_Text:sensor"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Consultando el sensor $sensor"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "consultar_nodo",
                                    "params": {
                                        "sensor_name":"$sensor"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "types": [
        {
            "name": "$Speed",
            "entities": [
                {
                    "key": "SLOWLY",
                    "synonyms": [
                        "slowly",
                        "slow"
                    ]
                },
                {
                    "key": "NORMALLY",
                    "synonyms": [
                        "normally",
                        "regular"
                    ]
                },
                {
                    "key": "QUICKLY",
                    "synonyms": [
                        "quickly",
                        "fast",
                        "quick"
                    ]
                }
            ]
        }
    ]
}