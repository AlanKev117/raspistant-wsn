{
    "locale": "es",
    "manifest": {
        "displayName": "Raspistant",
        "invocationName": "Raspistant",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.example.actions.BlinkLight",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.BlinkLight",
                "parameters": [
                    {
                        "name": "number",
                        "type": "SchemaOrg_Number"
                    },
                    {
                        "name": "speed",
                        "type": "Speed"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "parpadea ($Speed:speed)? $SchemaOrg_Number:number veces",
                        "parpadea $SchemaOrg_Number:number veces ($Speed:speed)?"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Parpadeando $number veces"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.BlinkLight",
                                    "params": {
                                        "speed": "$speed",
                                        "number": "$number"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "DESCUBRIMIENTO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "DESCUBRIMIENTO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "descubre nodos sensores",
                        "descubrir nodos sensores"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Descubriendo nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "descubrirNodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "LISTADO",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "LISTADO",
                "parameters":[
                    {
                        "name":"nada",
                        "type":"SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "listar nodos sensores",
                        "lista nodos sensores"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Listando nodos sensores"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "listarNodos",
                                    "params": {
                                    "nada": "$nada"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "types": [
        {
            "name": "$Speed",
            "entities": [
                {
                    "key": "LENTO",
                    "synonyms": [
                        "lento",
                        "lentamente",
                        "despacio"
                    ]
                },
                {
                    "key": "NORMAL",
                    "synonyms": [
                        "normal",
                        "regular"
                    ]
                },
                {
                    "key": "RAPIDO",
                    "synonyms": [
                        "rapido",
                        "rapidamente",
                        "veloz"
                    ]
                }
            ]
        }
    ]
}